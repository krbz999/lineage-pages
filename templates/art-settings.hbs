<form>
  <p class="note">{{localize "LINEAGE_PAGES.SettingsArtDetails"}}</p>
  <section>
    <h2>{{localize "LINEAGE_PAGES.SettingsArt"}}</h2>
    {{#each items}}
    <div class="form-group">
      <label>{{item.name}}</label>
      <div class="form-fields">
        <input type="text" name="{{item.id}}" value="{{backdrop}}" placeholder="{{localize 'LINEAGE_PAGES.SettingsArtBackdrop'}}">
        {{filePicker type="image" target=item.id}}
      </div>
    </div>
    {{/each}}
  </section>

  <footer>
    <button type="submit">
      <i class="fa-solid fa-save"></i> {{localize "Save"}}
    </button>
  </footer>
</form>
