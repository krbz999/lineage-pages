<div class="content">

  <div class="lineage-nav">
    <button data-action="left"><i class="fa-solid fa-arrow-left"></i></button>
    <div class="gallery">
      {{#each items as |item|}}
      <img src="{{item.img}}" data-tooltip="{{item.name}}" data-uuid="{{item.uuid}}" data-action="swap-page" {{#if (eq item.uuid ../item.uuid)}}class="active"{{/if}}>
      {{/each}}
    </div>
    <button data-action="right"><i class="fa-solid fa-arrow-right"></i></button>
  </div>

  <!-- Lineage page -->
  <div class="lineage">
    {{#if backdrop}}<img class="backdrop" src="{{backdrop}}">{{/if}}
    <div class="item">
      <a class="content-link" draggable="true" data-uuid="{{item.uuid}}" data-id="{{item.id}}" data-pack="{{item.pack}}">{{item.name}}</a>
    </div>
    <div class="description">{{{text}}}</div>
  </div>

</div>
